<%= simple_form_for @restaurant do |f| %>
  <%= f.input :name, placeholder: 'Enter Name' %>
  <%= f.input :category, collection: %w[chinese italian japanese french belgian], placeholder: 'Select Category' %>
  <%= f.input :address, placeholder: '123 Street, City' %>
  <%= f.input :phone_number, required: false, placeholder: '+44 123-456-789' %>
  <%= f.submit class: 'btn btn-primary' %>
<% end %>
