<div class="cards"></div>
<%= simple_form_for [@restaurant, @review] do |f|%>
  <%= f.input :content, placeholder: 'Enter Review' %>
  <div class="star-rating">
    <% 5.times do |i| %>
      <input type="radio" name="review[rating]" value="<%= i + 1 %>" <%= "checked" if i == 2 %> />
    <% end %>
  </div>
  <div class="card">
    <%= f.submit class: 'btn btn-secondary' %>
  </div>
<% end %>
